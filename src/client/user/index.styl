.User
  display flex
  align-items center
  &-description
    color $bodyColor

  &--coverLetter
    position relative
    padding 5.5em 0 1em 0
    text-align center
  &-name
    margin-right .5em
    &--coverLetter
      color $titleColor

  &-image, &-image--coverLetter
    border-radius 50%

  &-imageContainer
    &--coverLetter
      text-align center
      position absolute
      top -77px
      left 0
      right 0
